<Window x:Class="Kingstone.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Kingstone"
        mc:Ignorable="d"
        Title="Remote Control App" 
        Height="800" Width="1200"
        WindowState="Maximized"
        KeyDown="MainWindow_KeyDown"
        MouseDown="MainWindow_MouseDown"
        MouseUp="MainWindow_MouseUp"
        MouseMove="MainWindow_MouseMove"
        MouseWheel="MainWindow_MouseWheel"
        Focusable="True"
        Background="Gray" Icon="/85929_kingston_icon.png">
    <Window.Resources>
        <Cursor x:Key="CustomCursor">Resources/mini_normal.cur</Cursor>
    </Window.Resources>
    <Grid>
        <!-- Full-window camera display -->
        <Image x:Name="CameraImage" 
               Stretch="Uniform"  Cursor="{StaticResource CustomCursor}"
               StretchDirection="Both" MouseMove="CameraImage_MouseMove" Focusable="True" MouseLeftButtonDown="CameraImage_MouseLeftButtonDown" MouseLeftButtonUp="CameraImage_MouseLeftButtonUp" MouseRightButtonDown="CameraImage_MouseRightButtonDown" MouseRightButtonUp="CameraImage_MouseRightButtonUp" MouseWheel="CameraImage_MouseWheel"/>

        <!-- Floating controls panel -->
        <local:FloatingControlsBar x:Name="FloatingControls"
                           HorizontalAlignment="Right"
                           VerticalAlignment="Center"
                           Width="250"
                           Visibility="Visible" />

        <!-- Floating toggle button -->
        <Button x:Name="FloatingToggleButton"
                Width="30"
                Height="60"
                HorizontalAlignment="Right"
                VerticalAlignment="Center"
                Margin="0,0,250,0"
                Content="⚙"
                Opacity="0.3"
                FontSize="16"
                Foreground="White"
                BorderThickness="0"
                Click="FloatingToggleButton_Click"
                ToolTip="Toggle Controls Panel" Background="#80000000" Cursor="Hand"/>

        
    </Grid>
</Window>
